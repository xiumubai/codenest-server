generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 基础用户模型
model User {
  id            Int       @id @default(autoincrement())
  email         String?   @unique                        // 改为可选，因为可能只使用手机号注册
  phone         String?   @unique                        // 手机号，可选但唯一
  nickname      String?   @unique                        // 用户昵称，可选但唯一
  password      String?                                  // 密码，GitHub登录时可为空
  avatar        String?   // 头像URL
  role          String    @default("user")              // 用户角色
  
  // GitHub相关信息
  githubId      String?   @unique @map("github_id")     // GitHub用户ID
  githubProfile String?   @map("github_profile")        // GitHub主页
  bio           String?   // 个人简介
  location      String?   // 地理位置
  blog          String?   // 个人网站
  company       String?   // 公司

  // 审计字段
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  lastLoginAt   DateTime? @map("last_login_at")         // 最后登录时间

  @@map("users")
}
